{
  "extends": "stylelint-config-htmlacademy",
  "rules": {
    "selector-class-pattern": [
      "^[a-z0-9-_]+$",
      {
        "resolveNestedSelectors": true,
        "message": "Class names should match BEM pattern (lowercase, hyphens, underscores)"
      }
    ],
    "declaration-no-important": [
      true,
      {
        "severity": "warning"
      }
    ]
  },
  "ignoreFiles": [
    "source/vendor/**/*.css"
  ]
}
